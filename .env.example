# NageshCare Production Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
DJANGO_ENV=production

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Generate a new secret key for production:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-CHANGE-THIS

# Debug mode - MUST be False in production
DEBUG=False

# =============================================================================
# ALLOWED HOSTS & CSRF
# =============================================================================
# Comma-separated list of allowed hostnames
ALLOWED_HOSTS=nageshcare.com,www.nageshcare.com

# Comma-separated list of trusted origins for CSRF (must include https://)
CSRF_TRUSTED_ORIGINS=https://nageshcare.com,https://www.nageshcare.com

# =============================================================================
# DATABASE CONFIGURATION (MySQL on cPanel)
# =============================================================================
DB_ENGINE=django.db.backends.mysql
DB_NAME=wrgccpiz_nageshcare_db
DB_USER=wrgccpiz_nageshcare_user
DB_PASSWORD=your-database-password-here
DB_HOST=localhost
DB_PORT=3306

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=mail.nageshcare.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=noreply@nageshcare.com
EMAIL_HOST_PASSWORD=your-email-password-here

# Default email addresses
DEFAULT_FROM_EMAIL=info@nageshcare.com
SERVER_EMAIL=admin@nageshcare.com

# =============================================================================
# SSL/HTTPS SETTINGS (SSL certificate is installed)
# =============================================================================
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# =============================================================================
# STATIC & MEDIA FILES (cPanel Paths)
# =============================================================================
# These should match your cPanel directory structure
STATIC_ROOT=/home/wrgccpiz/public_html/nageshcare/staticfiles
MEDIA_ROOT=/home/wrgccpiz/public_html/nageshcare/media

# =============================================================================
# ADMIN CUSTOMIZATION (Optional - for extra security)
# =============================================================================
# Change the admin URL from /admin/ to something custom
# ADMIN_URL=admin/
