# Django Environment Configuration
# Copy this file to .env and update with your actual values

# Environment: 'development' or 'production'
DJANGO_ENV=development

# Security - CRITICAL: Generate a new secret key for production!
# You can generate one at: https://djecrety.ir/ or using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-change-in-production

# Debug Mode (NEVER set to True in production!)
DEBUG=False

# Allowed Hosts (comma-separated, e.g., yourdomain.com,www.yourdomain.com)
ALLOWED_HOSTS=localhost,127.0.0.1

# CSRF Trusted Origins (comma-separated, e.g., https://yourdomain.com,https://www.yourdomain.com)
CSRF_TRUSTED_ORIGINS=https://yourdomain.com

# Database Configuration
# For MySQL (common in cPanel)
DB_ENGINE=django.db.backends.mysql
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=3306

# For PostgreSQL (if using)
# DB_ENGINE=django.db.backends.postgresql
# DB_PORT=5432

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=mail.yourdomain.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=noreply@yourdomain.com
EMAIL_HOST_PASSWORD=your-email-password

# Default Email Addresses
DEFAULT_FROM_EMAIL=info@nageshcare.com
SERVER_EMAIL=admin@nageshcare.com

# Security Settings
SECURE_SSL_REDIRECT=True

# Static and Media Files (for cPanel, adjust paths as needed)
# Example: /home/username/nageshcare/public_html/static
STATIC_ROOT=/path/to/public_html/static
MEDIA_ROOT=/path/to/public_html/media

# Admin URL (customize for security)
ADMIN_URL=admin/
